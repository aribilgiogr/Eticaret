@model Eticaret.Models.Blog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<h1>Create</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FotoPath" class="control-label"></label>
                <input type="file" asp-for="FotoPath" class="form-control" name="photo" />
                <span asp-validation-for="FotoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogMetni" class="control-label"></label>
                <input asp-for="BlogMetni" class="form-control" />
                <span asp-validation-for="BlogMetni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogYazari" class="control-label"></label>
                <input asp-for="BlogYazari" class="form-control" />
                <span asp-validation-for="BlogYazari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Blog Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
